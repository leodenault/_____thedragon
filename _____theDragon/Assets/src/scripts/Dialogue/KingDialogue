using UnityEngine;
using System.Collections;

public class KingDialogue : MonoBehaviour {

	public string[] database;
	public int size = 6;

	// Use this for initialization
	void Start () {
		load ();
	}
	
	// Update is called once per frame
	void Update () {
	
	}

	public void load () {
		database = new string[size];
		database [0] = "There have been reports of a disturbance";
		database [1] = "in the village outside the grazing plains.";
		database [2] = "Go Investigate.";
		database [3] = "";
		database [4] = "You make your way back to the king, who rewards you richly";
		database [5] = "for restoring balance to his kingdom.";
	}
}
